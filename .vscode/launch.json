    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Remote Attach",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 8888
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/extra-addons",
                    "remoteRoot": "/mnt/extra-addons"
                },
                {
                    "localRoot": "${workspaceFolder}/odoo",
                    "remoteRoot": "/usr/lib/python3/dist-packages/odoo"
                }
            ],
            "justMyCode": true
        }
    ]
}